<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KurirApp" parent="Theme.Material3.Light">
        <item name="android:fontFamily">@font/poppins</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="colorOnSurface">@color/green</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="cardViewStyle">@style/Base.App.CardView</item>
    </style>

    <style name="Theme.KurirApp" parent="Base.Theme.KurirApp" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white2</item>
        <item name="itemTextColor">@color/nav_item_selector</item>
        <item name="itemIconTint">@color/nav_item_selector</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Base.App.CardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="Base.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>